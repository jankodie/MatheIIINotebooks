    "# 1.7 Gradient und Richtungsableitung"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "f(x,y) = cos(x) - 2*sin(y)\n",
    "plot3d(f, (x,-5,5), (y,-5,5))"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "gradient = derivative( f )\n",
    "P1 = plot_vector_field( gradient, (x,-5,5), (y,-5,5) )\n",
    "P2 = contour_plot(f, (x,-5,5), (y,-5,5), fill=False)\n",
    "show( P1 + P2 )"
   ]
  }
